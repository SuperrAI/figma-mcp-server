{
  "name": "figma-mcp-server",
  "version": "1.0.0",
  "description": "Model Context Protocol server for Figma API",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "node --loader ts-node/esm src/index.ts",
    "test": "node --loader ts-node/esm tests/api.test.ts",
    "test:watch": "nodemon --exec node --loader ts-node/esm tests/api.test.ts",
    "examples": "node --loader ts-node/esm tests/examples.ts"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "axios": "^1.6.2",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3",
    "nodemon": "^3.0.2"
  },
  "overrides": {
    "glob": "^9.0.0",
    "rimraf": "^5.0.0"
  },
  "resolutions": {
    "glob": "^9.0.0",
    "rimraf": "^5.0.0",
    "inflight": "^2.0.0"
  }
}